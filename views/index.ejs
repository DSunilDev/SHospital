<!--Dash Board-->
<html>
    <head>
        <link rel="stylesheet" href="style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
        <title>Dashboard</title>
</head>
    <body>
      <%- include('navbar') %>
        <div class="dashboard">
        <div class="card" style="width: 18rem;">
            <img src="imgs/doctor.png" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">No. of Doctors</h5>
              <p class="card-text">Doctors Available </p>
              <a href="/DoctorForm" class="btn btn-primary">Add Doctor</a>
            </div>
          </div>
          <div class="card" style="width: 18rem;">
            <img src="imgs/patient.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">No. of Patients</h5>
              <p class="card-text">Records Available : </p>
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  Add Patient
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li><a class="dropdown-item" href="/outpatientform">Out Patient</a></li>
                  <li><a class="dropdown-item" href="/inpatientform">In Patient</a></li>
                  <li><a class="dropdown-item" href="/OutPatientRecord">Patient Record</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="card" style="width: 18rem;">
            <img src="imgs/bg.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Surgeries Done</h5>
              <p class="card-text">Records Available : </p>
              <a href="/SurgeryForm" class="btn btn-primary">Add Surgery</a>
            </div>
          </div>
          </div>
          <%- include('footer') %>
    </body>
</html>



